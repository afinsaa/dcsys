<p id="notice"><%= notice %></p>

<h1>Schools</h1>

 <div class="card-body">
  <div class="table-responsive">
    <table class="table table-bordered dataTable">

  <thead>
    <tr>
      <th>Name</th>
      <th>Contact name</th>
      <th>Phone</th>
      <th>Mobile</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.contact_name %></td>
        <td><%= school.phone %></td>
        <td><%= school.mobile %></td>
        <td><%= school.email %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>
