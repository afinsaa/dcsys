<%= form_with(model: parent) do |form| %>
  <% if parent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(parent.errors.count, "error") %> prohibited this parent from being saved:</h2>

      <ul>
        <% parent.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-4">
        <%= form.label :Parent  %><br />
      <%= collection_select(:parent, :user_id, User.where(roles_mask: 8), :id, :name, {:include_blank => true},{:class => ' list-search form-control'})  %>
    </div>

    <div class="form-group col-md-4">
        <%= form.label :Student  %><br />
      <%= collection_select(:parent, :student_id, Student.all, :id, :name, {:include_blank => true},{:class => ' list-search form-control'})  %>
    </div>

    

  </div>


  

  <div class="actions row">
    <div class="form-group  col-md-6">
        <%= form.submit t('portal.forms.submit'), class: 'btn btn-primary btn-block' %>
    </div>
    
</div>
<% end %>
